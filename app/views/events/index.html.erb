<% if @user.role == "admin" %>
  <div class="container mt-5">
    <h1 class="text-center">Spotkania</h1>
    <%= link_to "Powrót", profile_path, class: "btn btn-secondary" %>
    <%= link_to "Nowe spotkanie", new_event_path, class: "btn btn-primary" %>
    <table class="table table-striped table-bordered mt-2">
      <thead class="thead-dark">
        <tr>
          <th class="text-center align-middle">Nazwa pierwszej drużyny</th>
          <th class="text-center align-middle">Nazwa drugiej drużyny</th>
          <th class="text-center align-middle">Data spotkania</th>
          <th class="text-center align-middle">Wynik pierwszego zespołu</th>
          <th class="text-center align-middle">Wynik drugiego zespołu</th>
          <th class="text-center align-middle">Akcje</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td class="text-center align-middle"><%= event.name_first_team %></td>
            <td class="text-center align-middle"><%= event.name_second_team %></td>
            <td class="text-center align-middle"><%= event.date %></td>
            <td class="text-center align-middle"><%= event.team_first_score %></td>
            <td class="text-center align-middle"><%= event.team_second_score %></td>
            <td class="text-center align-middle">
              <div class="d-flex flex-column align-items-center">
                <%= link_to "Szczegóły", event, class: "btn btn-primary btn-sm btn-block mb-2" %>
                <%= link_to "Edytuj", edit_event_path(event), class: "btn btn-warning btn-sm btn-block mb-2" %>
                <%= form_with(model: event, method: :delete, url: event_path(event), data: { confirm: "Are you sure?" }) do |form| %>
                  <%= form.submit "Usuń", class: "btn btn-danger btn-sm btn-block" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="container mt-5">
    <h1 class="text-center">Spotkania</h1>
    <%= link_to "Powrót", profile_path, class: "btn btn-secondary" %>
    <table class="table table-striped table-bordered mt-2">
      <thead class="thead-dark">
        <tr>
          <th class="text-center align-middle">Nazwa pierwszej drużyny</th>
          <th class="text-center align-middle">Nazwa drugiej drużyny</th>
          <th class="text-center align-middle">Data spotkania</th>
          <th class="text-center align-middle">Wynik pierwszego zespołu</th>
          <th class="text-center align-middle">Wynik drugiego zespołu</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td class="text-center align-middle"><%= event.name_first_team %></td>
            <td class="text-center align-middle"><%= event.name_second_team %></td>
            <td class="text-center align-middle"><%= event.date %></td>
            <td class="text-center align-middle"><%= event.team_first_score %></td>
            <td class="text-center align-middle"><%= event.team_second_score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
