<% if @user.role == "admin" %>
  <div class="container">
    <h1 class="text-center">Spotkania</h1>
    <table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th class="text-center">Nazwa pierwszej drużyny</th>
      <th class="text-center">Nazwa drugiej drużyny</th>
      <th class="text-center">Data spotkania</th>
      <th class="text-center">Wynik pierwszego zespołu</th>
      <th class="text-center">Wynik drugiego zespołu</th>
      <th class="text-center">Akcje</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td class="text-center"><%= event.name_first_team %></td>
        <td class="text-center"><%= event.name_second_team %></td>
        <td class="text-center"><%= event.date %></td>
        <td class="text-center"><%= event.team_first_score %></td>
        <td class="text-center"><%= event.team_second_score %></td>
        <td class="text-center">
          <div class="d-flex flex-column align-items-center">
            <%= link_to 'Szczegóły', event, class: 'btn btn-primary btn-sm btn-block mb-2' %>
            <%= link_to 'Edytuj', edit_event_path(event), class: 'btn btn-warning btn-sm btn-block mb-2' %>
            <%= form_with(model: event, method: :delete, url: event_path(event), data: { confirm: 'Are you sure?' }) do |form| %>
              <%= form.submit 'Usuń', class: 'btn btn-danger btn-sm btn-block' %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

    <br>
    <%= link_to 'Powrót', profile_path, class: 'btn btn-secondary' %>
    <%= link_to 'Nowe spotkanie', new_event_path, class: 'btn btn-primary' %>
  </div>
<% else %>
  <div class="container mt-5">
    <h1 class="text-center">Spotkania</h1>
    <table class="table table-striped table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>Nazwa pierwszej drużyny</th>
          <th>Nazwa drugiej drużyny</th>
          <th>Data spotkania</th>
          <th>Wynik pierwszego zespołu</th>
          <th>Wynik drugiego zespołu</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name_first_team %></td>
            <td><%= event.name_second_team %></td>
            <td><%= event.date %></td>
            <td><%= event.team_first_score %></td>
            <td><%= event.team_second_score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
